<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<style type="text/css">
html {
    overflow-y: scroll;
}

body {
    padding-top: 60px;
    font-family: 'Open Sans', sans-serif;
}

h2, h3, h4, h5, h6 {
    font-family: Georgia;
    font-weight: normal;
}

h1 {
    margin: 0;
}

.breadcrumb {
    background: none;
    margin-bottom: 5px;
    padding-left: 0;
    padding-right: 0;
}

#header {
    padding: 0 0 20px;
}

#slider {
    background: #999;
    padding: 15px;
    color: #fff;
    margin-bottom: 5px;
}

#slider ul {
    margin-bottom: 0;
}

#slider .slider {
    position: relative;
    width: 700px;
    height: 210px;
}

#slider .slider li {
    position: absolute;
}

#slider .carousel {
    position: absolute;
    visibility: hidden;
}

#content {
    margin-bottom: 20px;
}

#footer {
    font-size: 85%;
}
</style>
{{ parent() }}
