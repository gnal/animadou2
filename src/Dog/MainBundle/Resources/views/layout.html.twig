                {% include 'DogMainBundle::breadcrumb.html.twig' with {crumbs: []} %}
                {% endblock %}
            </div>
        </div>#}
        <div class="row">
            <div class="col-md-{% if block('sidebar') %}9{% else %}12{% endif %}">
                {% if block('title') %}
                    <h2>
                        {% if block('actions') %}
                        <div class="pull-right">
                            {{ block('actions') }}
                        </div>
                        {% endif %}
                        {{ block('title') }}
                    </h2>
                {% endif %}
                {{ msi_block_render('content_top', page) }}
                {{ block('page_content') }}
                {{ msi_block_render('content_bottom', page) }}
            </div>
            {% if block('sidebar') %}
            <div class="col-md-3">
                {{ block('sidebar') }}
                {#<p class="lead"><a class="btn btn-block btn-large btn-info" href="#"><i class="icon-location-arrow icon-large"></i> DEVIS EXPRESS</a></p>#}
            </div>
            {% endif %}
