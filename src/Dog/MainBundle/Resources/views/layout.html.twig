            <li><a href="{{ path('dog_main_gallery_list') }}">Contact Us</a></li>
        </ul>
    </div>

    {% if page.images.count %}
    <div class="row">
        <div class="col-md-12">
            {# Slider #}
            {% include 'DogMainBundle:Slider:slider.html.twig' %}
        </div>
    </div>
    {% endif %}

    <div class="content">
        {#<div class="row">
            <div class="col-md-12">
