    </div>

    <div class="navbar navbar-inverse" style="margin-bottom: 0;">
        <ul class="nav navbar-nav pull-right">
            <li><a href="{{ path('homepage', {_locale: app.request.locale == 'fr' ? 'en' : 'fr'}) }}">{{ app.request.locale == 'fr' ? 'English' : 'Français' }}</a></li>
        </ul>
        <ul class="nav navbar-nav">
            <li><a href="{{ path('homepage') }}">Home</a></li>
            <li><a href="{{ path('dog_main_service_list') }}">About Us</a></li>
